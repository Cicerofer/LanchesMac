@model IEnumerable<LanchesMac.Models.Pedido>

<h2>Pedidos Por Período</h2>

<nav class="navbar navbar-dark">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Data Inicial</label>
                    <input type="date" class="form-control" name="minDate" value="@ViewData["minDate"]" />
                </div>
                <div class="form-group">
                    <label for="mixDate">Data Final</label>
                    <input type="date" class="form-control" name="maxDate" value="@ViewData["mixDate"]" />
                </div>
            </div>
            <button type="submit" class="btn btn-success">Filtrar</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <di class="panel-heading">
        <h3 class="panel-title">Total de Pedidos = @Model.Count()</h3>
        <h3 class="panel-title">Total de Lanches nos Pedidos = @Model.Sum(obj => obj.TotalItensPedido).ToString()</h3>
        <h3 class="panel-title">Valor Total dos Pedido = @Model.Sum(obj => obj.PedidoTotal).ToString("c")</h3>
    </di>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>@Html.DisplayNameFor(model => model.PedidoId)</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                    <th>@Html.DisplayNameFor(model => model.PedidoTotal)</th>
                    <th>@Html.DisplayNameFor(model => model.TotalItensPedido)</th>
                    <th>@Html.DisplayNameFor(model => model.PedidoEntregueEm)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@Html.DisplayFor(modelItem => item.PedidoId)</th>
                        <th>@Html.DisplayFor(modelItem => item.Nome)</th>
                        <th>@Html.DisplayFor(modelItem => item.Email)</th>
                        <th>@Html.DisplayFor(modelItem => item.Telefone)</th>
                        <th>@Html.DisplayFor(modelItem => item.PedidoTotal)</th>
                        <th>@Html.DisplayFor(modelItem => item.TotalItensPedido)</th>
                        <th>@Html.DisplayFor(modelItem => item.PedidoEntregueEm)</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>